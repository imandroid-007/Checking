<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="165dp"
    android:layout_height="245dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/cardviewInsider"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/white">

<!--    app:cardBackgroundColor="#FAFAFA"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/propImage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/pricingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R 66 Lac"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/propBedroomsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 BHK Flat"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/propNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VTP Hilife"
            android:fontFamily="@font/source_sans_pro_light"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/addresTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wakad, Pune."
            android:fontFamily="@font/source_sans_pro_light"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posession by Dec 2020"
            android:fontFamily="@font/source_sans_pro_light"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="1dp"
            android:textSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/callOwnerLinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="7dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_call_black_24dp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/callTitleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingStart="8dp"
                    android:text="Call Owner"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/source_sans_pro_semi_bold"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

























